{
  "openapi": "3.0.4",
  "info": {
    "title": "RealtimeAnalytics.Api",
    "version": "1.0"
  },
  "paths": {
    "/api/History": {
      "get": {
        "tags": [
          "History"
        ],
        "parameters": [
          {
            "name": "hours",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Stats": {
      "get": {
        "tags": [
          "Stats"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/StatsSnapshot"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StatsSnapshot"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/StatsSnapshot"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "StatsSnapshot": {
        "type": "object",
        "properties": {
          "avg": {
            "type": "number",
            "format": "double"
          },
          "min": {
            "type": "number",
            "format": "double"
          },
          "max": {
            "type": "number",
            "format": "double"
          },
          "stdDev": {
            "type": "number",
            "format": "double"
          },
          "count": {
            "type": "integer",
            "format": "int64"
          },
          "anomalies": {
            "type": "integer",
            "format": "int64"
          },
          "lastTimestamp": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      }
    }
  }
}